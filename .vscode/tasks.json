{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Black Formatting",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/Scripts/python.exe",
      "args": ["-m", "black", "--verbose", "."],
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": []
    },
    {
      "label": "Check Black Formatting",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/Scripts/python.exe",
      "args": ["-m", "black", "--check", "--verbose", "."],
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Check Pylint Issues",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/Scripts/python.exe",
      "args": ["-m", "pylint", "**/*.py"],
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Check Pyright Types",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/Scripts/python.exe",
      "args": ["-m", "pyright"],
      "group": "test",
      "problemMatcher": []
    }
  ]
}
